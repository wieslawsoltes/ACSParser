<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AcsEditor.Controls">
  <Design.PreviewWith>
    <controls:ImagePreview Width="300" Height="250" />
  </Design.PreviewWith>
  
  <Style Selector="controls|ImagePreview">
    <Setter Property="Template">
      <ControlTemplate>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
          <Grid>
            
            <!-- Image Display Area -->
            <Panel Background="White">
              <SKBitmapControl Name="PART_BitmapControl"
                               Bitmap="{x:Null}"
                               Stretch="Uniform"
                               StretchDirection="Both"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
              
              <!-- Overlay for no image message -->
              <TextBlock Name="PART_NoImageText"
                         Text="No image data"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontStyle="Italic"
                         Opacity="0.6"
                         IsVisible="True"/>
            </Panel>
            
          </Grid>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>